package com.opg3;

public class Persoon {
	
	private String naam;
	private int leeftijd;
	
	public Persoon(String s, int i) {
		naam = s;
		leeftijd = i;
		studiepunten = new int[][] {
				{ 15, 13, 15, 12 },
				{ 14, 15, 15, 15 },
				{ 13, 10, 6, 2 },
				{ 12, 6, 0, 0}
		};
	}
	
	public void jarig() {
		++leeftijd;
	}
	
	public String toString() {
		return naam + ", " + leeftijd;
	}

}
