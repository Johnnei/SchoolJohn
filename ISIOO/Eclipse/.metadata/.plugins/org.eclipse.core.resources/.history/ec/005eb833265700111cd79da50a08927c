package com.opg2;

public class Persoon {
	private String naam;
	private String[] emailadressen;
	private int slot = 0;
	
	public Persoon(String s) {
		naam = s;
	}
	
	public void voegMailToe(String adres) {
		emailadressen[slot++] = adres;
	}
	
	public String toString() {
		String s = naam + "\n";
		
		for(int i = 0; i < emailadressen.length; i++) {
			s += "\n" + emailadressen[i]
		}
		
		return s;
	}
}
