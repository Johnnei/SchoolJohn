package com.opg3;

public class Persoon {
	
	private String naam;
	private int leeftijd;
	private int[][] studiepunten;
	
	public Persoon(String s, int i) {
		naam = s;
		leeftijd = i;
		studiepunten = new int[][] {
			
		};
	}
	
	public void jarig() {
		++leeftijd;
	}
	
	public String toString() {
		return naam + ", " + leeftijd;
	}

}
